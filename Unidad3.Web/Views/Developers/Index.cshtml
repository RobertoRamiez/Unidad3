@model IEnumerable<Unidad3.Web.Models.Developer>

@{
    ViewBag.Title = "Index";
}

@if (User.IsInRole("Administrator"))
{
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
}

<div class="row justify-content-center">
    <div class="col-md-10">
        <div class="card">
            <div class="card-header bg-warning py-2">
                <h5 class="m-0 text-center text-black-50">Lista de Desarrolladores</h5>
            </div>
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Genre.Nombre)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Phone)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Genre.Nombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Phone)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Contact)
                        </td>
                        <td>
                            <a href="@Url.Action("Edit", "Developers", new { id=item.Id })" class="btn btn-sm btn-warning">
                                <i class="fas fa-edit text-white"></i>
                            </a>
                            <a href="@Url.Action("Details", "Developers", new { id=item.Id })" class="btn btn-sm btn-info">
                                <i class="fas fa-eye"></i>
                            </a>
                            <a href="@Url.Action("Delete", "Developers", new { id=item.Id })" class="btn btn-sm btn-danger">
                                <i class="fas fa-trash"></i>
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>

