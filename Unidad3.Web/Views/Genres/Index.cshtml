@model IEnumerable<Unidad3.Web.Models.Genre>

@{
    ViewBag.Title = "Genero";
}


<p class="mt-3">
    if (@User.IsInRole("Administrator"))
    {
        <a href="#" data-toggle="modal" data-target="#AddModal" class="btn btn-sm bg-primary text-white"><i class="fas fa-plus"></i> Genero</a> 
    }
    
</p>
<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-warning text-center text-black">
                <h6 class="text-white">Lista de generos</h6>
            </div>
            <div class="card-body">
                <table class="table table-sm table-hover table-striped">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Nombre)
                        </th>
                        <th>Acciones</th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Nombre)
                            </td>
                            <td>
                                <a href="@Url.Action("Edit", "Genres", new { id = item.Id })" title="Editar" class="btn btn-sm btn-warning rounded"><i class="fas fa-pencil text-white"></i></a>
                                <a href="@Url.Action("Details", "Genres", new { id = item.Id })" title="Ver" class="btn btn-sm btn-primary rounded"><i class="fas fa-eye text-white"></i></a>
                                <a href="@Url.Action("DeleteConfirmed","Genres", new { id= item.Id})" title="Eliminar" class="btn btn-sm btn-danger"><i class="fas fa-eye-trash text-white"></i></a>
                            </td>
                        </tr>
                    }

                </table>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="AddModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-secondary">
                <h5 class="modal-title" id="exampleModalLabel">Agregar nuevo genero</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form action="@Url.Action("Create","Genres")" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-body">
                    <div class="form-group">
                        <label class="col-md-6 col-form-label">
                            Genre
                        </label>
                        <div class="col-md-10">
                            <input type="text" value="" name="Nombre" class="form-control" />
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                    <button type="submit" class="btn btn-primary">Guardar cambios</button>
                </div>
            </form>
        </div>
    </div>
</div>