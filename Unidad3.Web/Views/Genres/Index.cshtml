@model IEnumerable<Unidad3.Web.Models.Genre>

@{
    ViewBag.Title = "Index";
}


<p class="mt-3">
    <a href="@Url.Action("Create","Genres")" class="btn btn-sm bg-primary text-white"><i class="fas fa-plus"></i> Genero</a>
</p>
<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-warning text-center text-black">
                <h6 class="text-white">Lista de generos</h6>
            </div>
            <div class="card-body">
                <table class="table table-sm table-hover table-striped">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Nombre)
                        </th>
                        <th>Acciones</th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Nombre)
                            </td>
                            <td>
                                <a href="@Url.Action("Edit", "Genres", new { id = item.Id })" title="Editar"><i class="fas fa-pencil text-warning"></i></a>
                                <a href="@Url.Action("Details", "Genres", new { id = item.Id })" title="Ver"><i class="fas fa-eye text-primary"></i></a>
                                <a href="@Url.Action("Delete", "Genres", new { id = item.Id })" title="Borrar"><i class="fas fa-trash text-danger"></i></a>
                            </td>
                        </tr>
                    }

                </table>
            </div>
        </div>
    </div>
</div>

