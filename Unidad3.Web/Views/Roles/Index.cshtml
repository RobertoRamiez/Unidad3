@model IEnumerable<Unidad3.Web.Models.ApplicationUser>
@{
    ViewBag.Title = "Roles";
}


<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card mt-5">
                <div class="card-header bg-dark">
                    <h4 class="m-1 text-white">Lista de Usuarios</h4>
                </div>
                <div class="card-body">
                    <table class="table table-hover-sm">
                        <tr>
                            <td>Item</td>
                            <td>Username</td>
                            <td>Email</td>
                            <td>Add Role</td>
                        </tr>
                        @{ 
                            int count = 1;
                        }
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@count</td>
                                <td>@item.UserName</td>
                                <td>@item.Email</td>
                                <td><a href="@Url.Action("AddRoles","Roles",new { id=item.Id })">Add</a></td>
                            </tr>
                            count++;
                        }
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>